{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "types": ["mocha", "chai", "node"],
        "lib": ["es2021", "dom"]
    },
    "include": ["src", "tests"],
    "typedocOptions": {
        "entryPoints": ["./src/index.ts"],
        "entryPointStrategy": "expand",
        "plugin": "typedoc-plugin-markdown",
        "excludeExternals": true,
        "externalPattern": ["**/node_modules/**"],
        "excludePrivate": true,
        "out": "docs"
    }
}
